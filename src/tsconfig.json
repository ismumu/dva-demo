{
	"compilerOptions": {
		"outDir": "build/dist",
		"module": "esnext",
		"target": "es2015",
		"lib": [
			"es6",
			"dom"
		],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "Node",
		"rootDir": "src",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": false,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"allowSyntheticDefaultImports": true,
		"typeRoots": [
            "node_modules/@types"
		],
	},

	"exclude": [
		"node_modules",
		"dist",
	]
}
